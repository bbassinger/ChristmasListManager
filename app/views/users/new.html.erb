<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<div class="ml-5" style="width: 400px;">
<h1>Sign Up To Save Your Christmas Lists!</h1>
</div>
<style>
body {
  background-color: #5ADE50;
  background-image: url('https://i.imgur.com/zB5qMg7.jpg');
}

</style>
<% flash.each do |key, value| %>
 <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<h5>
<div class="ml-5">
 <div class= "row">
  <div class= "col-lg-8">
 <%= form_for @user do |f|%>
  <%= f.label :firstname, "First Name"%>
  &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
  <%= f.label :lastname, "Last Name"%><br></div>
  <div class= "col-lg-8">
  
   <%= f.text_field :firstname, :placeholder => "First Name"%>
   <%= f.text_field :lastname, :placeholder => "Last Name"%><br>
 
  <%= f.label :email%><br>
   <%= f.text_field :email, :placeholder => "name@example.com"%><br>
   <%= f.label :username%><br>
   <%= f.text_field :username, :placeholder => "Enter a username"%><br>
   
   <%= f.label :password%><br>
   <%= f.password_field :password, :placeholder => "Enter password"%>
   <%= f.password_field :password_confirmation, :placeholder => "Confirm password"%></div></div></div>
   
   <br><br>
  <div class="ml-5" style="width: 200px;">
  <%= f.submit :class =>'btn btn-primary'%>
  </div>
   </h5>
 <%end%>